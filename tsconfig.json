{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "noEmit": false,
        "strict": false,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "axios": [
                "node_modules/axios"
            ],
            "*": ["types/*"]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "types": [
        "node"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}