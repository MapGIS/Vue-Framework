{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "member-access": false,
        "quotemark": [false, "single"],
        "indent": [false, "spaces", 2],
        "interface-name": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": false,
        "trailing-comma": [false, {"multiline": "never", "singleline": "never"}],
        "semicolon": [false, "never"],
        "max-line-length": [false, 180],
        "max-classes-per-file": [false, 1],
        "jsdoc-format": [false, "check-multiline-start"]
    }
}
